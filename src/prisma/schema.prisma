generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id    Int     @id @default(autoincrement())
  name  String
  description String
}

model Item {
  id    Int     @id @default(autoincrement())
  name  String
  description String
  category String
}